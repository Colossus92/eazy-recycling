{
  "name": "springboot-backend",
  "root": "apps/springboot-backend",
  "targets": {
    "build": {
      "dependsOn": [
        "eba-schema:build"
      ]
    },
    "ci-build": {
      "executor": "@nx/gradle:gradle",
      "inputs": [
        "default",
        "{workspaceRoot}/gradle.properties",
        "{workspaceRoot}/settings.gradle.kts",
        "^production"
      ],
      "outputs": [
        "{projectRoot}/build/libs/app.jar",
        "{projectRoot}/build/classes"
      ],
      "options": {
        "taskName": ":bootJar"
      },
      "dependsOn": ["eba-schema:build", "test"],
      "excludeDependsOn": false
    },
    "docker:build": {
      "inputs": [
        "{projectRoot}/Dockerfile",
        "{projectRoot}/.dockerignore",
        "{projectRoot}/build/libs/app.jar"
      ],
      "dependsOn": ["ci-build"],
      "excludeDependsOn": false
    }
  },
  "implicitDependencies": [
    "eba-schema"
  ]
}
