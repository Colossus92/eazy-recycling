{
  "name": "springboot-backend",
  "root": "apps/springboot-backend",
  "targets": {
    "bootRun": {
      "dependsOn": [
        "assemble"
      ]
    },
    "assemble": {
      "continuous": true,
      "options": {
        "args": [
          "--continuous"
        ]
      }
    },
    "build": {
      "dependsOn": [
        "eba-schema:build"
      ]
    },
    "ci-build": {
      "executor": "@nx/gradle:gradle",
      "options": {
        "taskName": ":build",
        "args": ["--continue"]
      },
      "excludeDependsOn": false
    },
    "docker:build": {
      "dependsOn": ["ci-build"],
      "excludeDependsOn": false
    }
  },
  "implicitDependencies":[
    "eba-schema"
  ]
}
